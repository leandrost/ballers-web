<!DOCTYPE html>
<html>
  <head>
    <title>Ballers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag *webpack_asset_paths('application', extension: 'js') %>
    <%= stylesheet_link_tag *webpack_asset_paths('application', extension: 'css') %>
  </head>

  <body>
    <header class="top-bar">
      <div class="top-bar-title">
        <strong>Ballers</strong>
      </div>
      <form action="">
        <input class="input-group-field" type="search" placeholder="address, neighborhood, city, state or zip" />
      </form>
    </header>
    <%= yield %>
  </body>
</html>
